<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B30000" />
            <corners
                android:topLeftRadius="125dp"
                android:topRightRadius="125dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners
                android:topLeftRadius="125dp"
                android:topRightRadius="125dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <stroke android:color="#B30000" android:width="4dp" />
        </shape>
    </item>
</layer-list>
